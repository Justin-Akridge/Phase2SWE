
if [ "$1" = "install" ]; then
    pip install --user -r requirements.txt
    exit 0
elif [ "$1" = "test" ]; then
    pytest --maxfail=1 --disable-warnings -q --cov=cli
    exit 0
elif [ -f "$1" ]; then
    python3 -m cli.main "$1"
    exit 0
else
    echo "Usage: ./run [install|test|URL_FILE]"
    exit 1
fi